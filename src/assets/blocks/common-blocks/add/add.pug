                option(value=''+ option +'')= option
      .input-wrapper.input-wrapper--textarea
        span.add__form-title Отзыв
        textarea.add__form-input.add__form-input--textarea(placeholder='Введите текст')
      .input-wrapper.input-wrapper--photo
        span.add__form-title Добавить фотографию
        .input-photo.input-photo--small
          input(type='file' name='Фото').add__form-input
      button.add__btn.add__btn--small(type='submit') Добавить


mixin add(title, col_1)
  .add.hidden
    .add__content.container
      .close
      span.add__title= title
      form.add__form
        if col_1
          .add__col
            .input-wrapper
              span.add__form-title Фото
              .input-photo
                input(type='file' name='Фото').add__form-input
            button.add__btn(type='submit') Добавить
        +col_lg(col_lg)
        +col2(col_2)
        +col3(col_3)
