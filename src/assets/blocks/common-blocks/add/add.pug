mixin col2(col_2)
  if col_2
    .add__col.add__col--second
      if col_2.input_fields
        for input in col_2.input_fields
          .input-wrapper
            span.add__form-title= input.title
            input(type=''+ input.type +'' name=''+ input.title +'' placeholder=''+ input.placeholder +'').add__form-input
      if col_2.select_fields
        for select in col_2.select_fields
          .input-wrapper
            span.add__form-title= select.title
            select(name=''+ select.title +'' placeholder=''+ select.title +'').add__form-input.add__form-input--select
              option.disabled(disabled selected)= select.title
              each option in select.options
                option(value=''+ option +'')= option
      if col_2.rate
        .input-wrapper.input-wrapper--rate
          span.add__form-title Оценка
          .stars
            span.star
            span.star
            span.star
            span.star
            span.star
        .input-wrapper.input-wrapper--rec
          span.add__form-title Рекомендация
          .add__form__options
            input(type='radio' id='recommended' name='Рекомендация' value='Рекомендую' checked)
            input(type='radio' id='not-recommended' name='Рекомендация' value='Не рекомендую')


